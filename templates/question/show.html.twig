{% extends "base.html.twig" %}

{% block title %}
    {{ question.title }}
{% endblock title %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('css/question_show.css')}}">
{% endblock stylesheet %}

{% block body %}
    <div class="block">
        <div class="d-flex flex-row-nowrap align-items-center pb-30">
            {% include "./partials/_rating.html.twig" with {rating: question.rating, from: 'question', id: question.id} %}
            <h3>{{ question.title }}</h3>
            <div class="question-tag">QUESTION</div>
            <img src="https://cdn.discordapp.com/attachments/796039073538113547/939619858616819752/unknown.png" alt="Avatar" class="avatar ml-auto">
        </div>
        <p class="question-text">{{ question.content }}</p>
        <div class="separator">
            <h4 pb-20>Nombre de réponse : {{ question.nbResponse }}</h4>
        </div>
        
        <h3 class="pb-20">Votre Réponse:</h3>
        <div class="comment-form">
            {{ form_start(form) }}
                {{ form_rest(form)}}
                    <button class="btn btn-primary">Soumettre</button>
            {{ form_end(form) }}

        </div>

        {% for comment in question.comments %}    
            <div class="question-response-elem d-flex felx-row-nowrap mb-20">
                {% include "./partials/_rating.html.twig" with {rating: comment.rating, from: 'comment', id: comment.id} %}
                <div class="d-flex flex-column">
                    <div class="d-flex flex-row-nowrap align-items-center pb-10">
                        <img src="https://cdn.discordapp.com/attachments/832919369260466226/1103430153465495632/IMG_1026.png" alt="" class="avatar-small mr-10">
                        <p class="clickable">Kurt Friedhart</p>
                        <span class="ml-auto"> {{ comment.createdAt | format_datetime(pattern= 'd MMMM Y', locale= 'fr') }} </span>
                    </div>
                    <p class="question-response-text">{{ comment.content }}</p>
                </div>
            </div>
        {% endfor %}

    </div>
{% endblock body %}