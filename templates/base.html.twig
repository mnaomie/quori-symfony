<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <script src="{{asset('javascripts/index.js')}} defer"></script>
        <script src="https://kit.fontawesome.com/42fc4ae5b2.js" crossorigin="anonymous"></script>
    </head>
    <body class="d-flex flex-column">
        {{ include('partials/_header.html.twig') }}
        {% for cat, list in app.flashes %}
            {% for msg in list %}
                <div class="flash flash-{{cat}}">
                    {{msg}}
                </div>
            {% endfor %}
        {% endfor %}
        <div class=" app-content flex-fill d-flex flex-row-nowrap justify-content-center">
            <div class="content flex-fill d-flex felx-row-nowrap py-50">
                {{ include('partials/_sidebar.html.twig') }}
                <div class="flex-fill">
                    {% block body %}{% endblock %}
                </div>

            </div>
        </div>
        {{ include('partials/_footer.html.twig') }}
    </body>
</html>
